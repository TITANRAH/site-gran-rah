---
import { ProductMusicSchema } from "@/types";
import Layout from "@/layouts/Layout.astro";
import { Picture } from "astro:assets";
import { formatPrice } from "@/helpers";
import { WHATSAPP_NUMBER } from "@/constants";

Astro.response.headers.set('Cache-Control', 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0');
Astro.response.headers.set('Pragma', 'no-cache');
Astro.response.headers.set('Expires', '0');

const { slug } = Astro.params;

const url = `${import.meta.env.API_URL}/products?slug=${slug}`;
const response = await fetch(url);
const json = await response.json();

const product = ProductMusicSchema.safeParse(json[0]);
if (!product.success) return Astro.redirect("/404");

const { title, featured_images, acf, content } = product.data;

const albumTitle = title.rendered;

let isForSale = false;
let price: number = 0;
let description = "";
let spotifyUrl = "";
let youtubeUrl = "";
let albumImage = "";

if (acf && !Array.isArray(acf)) {
  isForSale = acf.sale || false;
  price =
    typeof acf.price === "string" ? parseFloat(acf.price) : acf.price || 0;
  description = acf.description || "";
  spotifyUrl = acf.url_spotify || "";
  youtubeUrl = acf.url_youtube || "";

  if (
    acf.product_image &&
    typeof acf.product_image === "object" &&
    "full" in acf.product_image
  ) {
    albumImage = acf.product_image.full.url;
  }
}

if (
  !albumImage &&
  featured_images &&
  typeof featured_images === "object" &&
  "full" in featured_images
) {
  albumImage = featured_images.full.url;
}

const whatsappMessage = encodeURIComponent(
  `Hola! Me interesa el disco "${albumTitle}" por ${formatPrice(price)}. ¿Está disponible?`
);
const whatsappUrl = `https://wa.me/${WHATSAPP_NUMBER}?text=${whatsappMessage}`;
---

<Layout title={albumTitle} bgImage={albumImage} subtitle="Disco">
  <article class="max-w-7xl mx-auto px-4 py-8 space-y-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      <div class="space-y-6" data-aos="fade-right">
        {
          albumImage ? (
            <div class="relative overflow-hidden rounded-2xl shadow-2xl group">
              <Picture
                src={albumImage}
                alt={albumTitle}
                width={800}
                height={800}
                formats={["avif", "webp"]}
                class="w-full aspect-square object-cover"
              />
              <div class="absolute inset-0 border-4 border-accent-gold/20 rounded-2xl pointer-events-none group-hover:border-accent-gold/40 transition-colors duration-300" />

              {isForSale && (
                <div class="absolute top-6 right-6 bg-accent-gold text-black px-4 py-2 rounded-full text-sm font-black uppercase tracking-wider shadow-2xl">
                  En Venta
                </div>
              )}
            </div>
          ) : (
            <div class="aspect-square bg-gray-800 flex items-center justify-center rounded-2xl">
              <svg
                class="w-32 h-32 text-gray-600"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z" />
              </svg>
            </div>
          )
        }

        <div class="grid grid-cols-2 gap-4">
          {
            spotifyUrl && (
              <a
                href={spotifyUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-2 bg-[#1DB954] hover:bg-[#1ed760] text-white py-4 rounded-xl font-bold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z" />
                </svg>
                Spotify
              </a>
            )
          }
          {
            youtubeUrl && (
              <a
                href={youtubeUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-2 bg-[#FF0000] hover:bg-[#cc0000] text-white py-4 rounded-xl font-bold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                </svg>
                YouTube
              </a>
            )
          }
        </div>
      </div>

      <div class="space-y-8" data-aos="fade-left">
        <div>
          <h1
            class="text-5xl md:text-6xl font-bebas text-accent-gold mb-4 tracking-wider leading-tight"
          >
            {albumTitle}
          </h1>
          <div class="h-1 w-24 bg-accent-gold rounded-full"></div>
        </div>

        {
          isForSale && price > 0 && (
            <div class="bg-secondary-bg rounded-2xl p-8 border-2 border-accent-gold/30 space-y-4">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-gray-400 text-sm uppercase tracking-wider mb-1">
                    Precio
                  </p>
                  <p class="text-4xl font-black text-accent-gold">
                    {formatPrice(price)}
                  </p>
                </div>
                <svg
                  class="w-16 h-16 text-accent-gold/20"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
                  <path
                    fill-rule="evenodd"
                    d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
              <a
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-gold w-full flex items-center justify-center gap-3 py-4 text-lg font-black uppercase transform hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-2xl"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                </svg>
                Consultar Disponibilidad
              </a>
            </div>
          )
        }

        {
          description && (
            <div class="bg-secondary-bg rounded-2xl p-8 border-2 border-accent-gold/30">
              <h2 class="text-2xl font-bebas text-accent-gold mb-4 tracking-wider flex items-center gap-2">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z" />
                </svg>
                Lista de Canciones
              </h2>
              <div
                class="tracklist prose prose-invert max-w-none"
                set:html={description}
              />
            </div>
          )
        }

        {
          content && content.rendered && content.rendered.trim() !== "" && (
            <div class="bg-secondary-bg rounded-2xl p-8 border-2 border-accent-gold/30">
              <div
                class="prose prose-invert max-w-none"
                set:html={content.rendered}
              />
            </div>
          )
        }
      </div>
    </div>

    <div class="flex items-center justify-center gap-4 pt-8" data-aos="fade-up">
      <div
        class="h-px bg-gradient-to-r from-transparent via-accent-gold to-transparent w-32"
      >
      </div>
      <div class="w-2 h-2 bg-accent-gold rounded-full animate-pulse"></div>
      <div
        class="h-px bg-gradient-to-r from-transparent via-accent-gold to-transparent w-32"
      >
      </div>
    </div>

    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8"
      data-aos="fade-up"
    >
      <a
        href="/tienda"
        class="inline-flex items-center gap-2 px-8 py-3 border-2 border-accent-gold text-accent-gold hover:bg-accent-gold hover:text-black rounded-lg font-bold uppercase transition-all duration-300"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Volver a la Tienda
      </a>

      {
        isForSale && (
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-8 py-3 bg-accent-gold text-black hover:bg-white rounded-lg font-bold uppercase transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
            </svg>
            Comprar Ahora
          </a>
        )
      }
    </div>
  </article>
</Layout>

<style>
  :global(.tracklist ol) {
    list-style: none;
    counter-reset: track-counter;
    padding: 0;
  }

  :global(.tracklist ol li) {
    counter-increment: track-counter;
    position: relative;
    padding: 0.75rem 0 0.75rem 3rem;
    border-bottom: 1px solid rgba(255, 215, 0, 0.1);
    transition: all 0.3s ease;
  }

  :global(.tracklist ol li:hover) {
    background: rgba(255, 215, 0, 0.05);
    padding-left: 3.5rem;
  }

  :global(.tracklist ol li:last-child) {
    border-bottom: none;
  }

  :global(.tracklist ol li::before) {
    content: counter(track-counter, decimal-leading-zero);
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.25rem;
    font-weight: bold;
    color: var(--color-accent-gold);
    font-family: "Bebas Neue", sans-serif;
    letter-spacing: 0.05em;
  }

  :global(.tracklist ol li p) {
    margin: 0;
    color: #fff;
    font-size: 1rem;
    line-height: 1.5;
  }

  :global(.prose h1),
  :global(.prose h2),
  :global(.prose h3),
  :global(.prose h4) {
    color: var(--color-accent-gold);
    font-weight: 900;
    text-transform: uppercase;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  :global(.prose p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: #e5e7eb;
  }

  :global(.prose strong) {
    color: var(--color-accent-gold);
    font-weight: 700;
  }

  :global(.prose a) {
    color: var(--color-accent-gold);
    text-decoration: underline;
    transition: color 0.3s;
  }

  :global(.prose a:hover) {
    color: white;
  }
</style>
