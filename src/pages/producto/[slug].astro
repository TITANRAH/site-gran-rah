---
import { ProductMusicSchema } from "@/types";
import Layout from "@/layouts/Layout.astro";
import { Picture } from "astro:assets";
import { WHATSAPP_NUMBER } from "@/constants";

// Caché de 30 segundos para productos
// Hard refresh (Cmd+Shift+R) muestra cambios inmediatamente
Astro.response.headers.set('Cache-Control', 'public, s-maxage=30, stale-while-revalidate=60');

const { slug } = Astro.params;

const url = `${import.meta.env.API_URL}/products?slug=${slug}`;
const response = await fetch(url);
const json = await response.json();

const product = ProductMusicSchema.safeParse(json[0]);
if (!product.success) return Astro.redirect("/404");

const { title, featured_images, acf, content, product_categories } = product.data;

const productTitle = title.rendered;

let isForSale = false;
let price: number = 0;
let description = "";
let spotifyUrl = "";
let youtubeUrl = "";
let productImage = "";

let color = "";
let size = "";
let theme = "";
let visor = "";

let sizes: string[] = [];
let colors: string[] = [];
let material = "";

if (acf && !Array.isArray(acf)) {
  isForSale = acf.sale || false;
  price = typeof acf.price === 'string' ? parseFloat(acf.price) : (acf.price || 0);
  description = acf.description || "";
  spotifyUrl = acf.url_spotify || "";
  youtubeUrl = acf.url_youtube || "";

  color = acf.color || "";
  size = acf.size || "";
  theme = acf.theme || "";
  visor = acf.visor || "";

  if (acf.sizes) {
    sizes = typeof acf.sizes === 'string'
      ? acf.sizes.split(',').map(s => s.trim()).filter(s => s.length > 0)
      : acf.sizes;
  }
  if (acf.colors) {
    colors = typeof acf.colors === 'string'
      ? acf.colors.split(',').map(c => c.trim()).filter(c => c.length > 0)
      : acf.colors;
  }
  material = acf.material || "";

  if (acf.product_image && typeof acf.product_image === 'object' && 'full' in acf.product_image) {
    productImage = acf.product_image.full.url;
  }
}

if (!productImage && featured_images && typeof featured_images === 'object' && 'full' in featured_images) {
  productImage = featured_images.full.url;
}

const isMusic = !!(spotifyUrl || youtubeUrl);
const isClothing = !!(sizes.length > 0 || colors.length > 0 || material);
const isCap = !isClothing && !!(color || visor || theme);

const formattedPrice = new Intl.NumberFormat('es-CL', {
  style: 'currency',
  currency: 'CLP'
}).format(price);

const whatsappMessage = encodeURIComponent(
  `Hola! Me interesa ${productTitle}${isForSale && price > 0 ? ` por ${formattedPrice}` : ''}. ¿Está disponible?`
);
const whatsappUrl = `https://wa.me/${WHATSAPP_NUMBER}?text=${whatsappMessage}`;

let subtitle = "Producto";
if (isMusic) {
  subtitle = "Disco";
} else if (product_categories && product_categories.length > 0) {
  const firstCategory = product_categories[0];
  if (typeof firstCategory === 'object' && 'name' in firstCategory) {
    subtitle = firstCategory.name || "Producto";
  } else {
    try {
      const categoryResponse = await fetch(`${import.meta.env.API_URL}/product_categories/${firstCategory}`);
      const categoryData = await categoryResponse.json();
      subtitle = categoryData.name || "Producto";
    } catch (error) {
      subtitle = "Producto";
    }
  }
}
---

