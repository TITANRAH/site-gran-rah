---
import Layout from "@/layouts/Layout.astro";
import ProductFilters from "@/components/products/ProductFilters.astro";
import ProductCardSimple from "@/components/products/ProductCardSimple.astro";
import { ProductsMusicSchema, type Category, HomePageSchema } from "@/types";

Astro.response.headers.set(
  "Cache-Control",
  "public, s-maxage=10, stale-while-revalidate=30"
);

const pageUrl = `${import.meta.env.API_URL}/pages?slug=tienda`;
const pageResponse = await fetch(pageUrl);
const pageJson = await pageResponse.json();
const parsedPageData = HomePageSchema.parse(pageJson[0]);

const title = parsedPageData.title.rendered;

let subtitle = "Store";
if (parsedPageData.acf && !Array.isArray(parsedPageData.acf) && parsedPageData.acf.title) {
  subtitle = parsedPageData.acf.title;
}

let bgImage = "";
if (
  parsedPageData.acf &&
  !Array.isArray(parsedPageData.acf) &&
  parsedPageData.acf.image &&
  typeof parsedPageData.acf.image === "object" &&
  "full" in parsedPageData.acf.image
) {
  bgImage = parsedPageData.acf.image.full.url;
}

if (
  !bgImage &&
  parsedPageData.featured_images &&
  typeof parsedPageData.featured_images === "object" &&
  "full" in parsedPageData.featured_images
) {
  bgImage = parsedPageData.featured_images.full.url;
}

const url = new URL(Astro.request.url);
const categoryParam = url.searchParams.get("categoria") || "todos";

const categoriesUrl = `${import.meta.env.API_URL}/product_categories`;
const categoriesResponse = await fetch(categoriesUrl);
const categoriesJson = await categoriesResponse.json();

const allProductsForCountUrl = `${import.meta.env.API_URL}/products?per_page=100&_embed`;
const allProductsForCountResponse = await fetch(allProductsForCountUrl);
const allProductsForCountJson = await allProductsForCountResponse.json();
const allProductsParsed = ProductsMusicSchema.parse(allProductsForCountJson);

const productsForSale = allProductsParsed.filter((product) => {
  return (
    product.acf && !Array.isArray(product.acf) && product.acf.sale === true
  );
});

const categories = categoriesJson
  .map((cat: Category) => {
    const countInSale = productsForSale.filter((product) => {
      if (!product.product_categories) return false;
      if (Array.isArray(product.product_categories)) {
        return product.product_categories.some((catRef: any) => {
          return typeof catRef === "number"
            ? catRef === cat.id
            : catRef.id === cat.id;
        });
      }
      return false;
    }).length;

    return {
      ...cat,
      count: countInSale,
    };
  })
  .filter((cat: any) => cat.count > 0);

let products: any[] = [];
let pageTitle = "Todos los Productos";

if (categoryParam === "todos") {
  products = productsForSale;
} else {
  const selectedCategory = categories.find(
    (cat: Category) => cat.slug === categoryParam
  );
  if (selectedCategory) {
    pageTitle = selectedCategory.name;

    products = productsForSale.filter((product) => {
      if (!product.product_categories) return false;
      if (Array.isArray(product.product_categories)) {
        return product.product_categories.some((catRef: any) => {
          return typeof catRef === "number"
            ? catRef === selectedCategory.id
            : catRef.id === selectedCategory.id;
        });
      }
      return false;
    });
  }
}
---

<Layout title={title} subtitle={subtitle} bgImage={bgImage}>
  <div class="py-8">
    <ProductFilters categories={categories} activeCategory={categoryParam} />
    <div id="productos" class="container mx-auto px-4 scroll-mt-24">
      <h2
        class="text-4xl md:text-5xl font-bebas text-accent-gold mb-8 text-center"
      >
        {pageTitle}
      </h2>

      {
        products.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {products.map((product, index) => (
              <ProductCardSimple product={product} index={index} />
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-xl text-gray-400">
              No hay productos disponibles en esta categor√≠a.
            </p>
          </div>
        )
      }
    </div>
  </div>
</Layout>
