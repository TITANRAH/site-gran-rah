---
interface Props {
  url: string;
}

const { url } = Astro.props;
---

<div class="music-card group relative bg-gray-800/80 rounded-3xl p-8 lg:p-6 backdrop-blur-lg border border-white/10 transition-all duration-500 ease-out overflow-hidden hover:-translate-y-2 hover:scale-[1.02] hover:border-accent-gold hover:shadow-[0_20px_60px_rgba(212,175,55,0.3)]">
  <div class="card-glow absolute -top-1/2 -left-1/2 w-[200%] h-[200%] opacity-0 transition-opacity duration-400 pointer-events-none group-hover:opacity-100 group-hover:animate-rotate" style="background: radial-gradient(circle, rgba(255, 0, 0, 0.15) 0%, transparent 70%);"></div>

  <div class="relative z-10">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-10 h-10 rounded-full bg-[#FF0000] flex items-center justify-center animate-bounce-slow">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-white">YouTube</h3>
    </div>

    <div class="relative rounded-xl overflow-hidden shadow-[0_10px_30px_rgba(0,0,0,0.5)] transition-all duration-300 group-hover:scale-[1.02] group-hover:shadow-[0_15px_40px_rgba(0,0,0,0.7)]">
      <iframe
        width="100%"
        height="352"
        src={url}
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen
        style="border-radius:12px"
        loading="lazy"
      ></iframe>
    </div>
  </div>
</div>

<style>
  @keyframes bounceSlow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce-slow {
    animation: bounceSlow 2s ease-in-out infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-rotate {
    animation: rotate 8s linear infinite;
  }
</style>
