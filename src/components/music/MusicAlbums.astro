---
import { ProductsMusicSchema } from "@/types";
import { processAlbumData, type ProcessedAlbum } from "@/helpers/albumHelpers";
import { WHATSAPP_NUMBER } from "@/constants";
import AlbumCard from "./AlbumCard.astro";

interface Props {
  title?: string;
  showDescription?: boolean;
}

const { title = "DiscografÃ­a", showDescription = false } = Astro.props;

const categoryUrl = `${import.meta.env.API_URL}/product_categories?slug=musica`;
const categoryResponse = await fetch(categoryUrl);
const categoryJson = await categoryResponse.json();

let processedAlbums: ProcessedAlbum[] = [];

if (categoryJson.length > 0) {
  const categoryId = categoryJson[0].id;
  const albumsUrl = `${import.meta.env.API_URL}/products?product_categories=${categoryId}&per_page=20`;
  const albumsResponse = await fetch(albumsUrl);
  const albumsJson = await albumsResponse.json();
  const albums = ProductsMusicSchema.parse(albumsJson);

  console.log(albums);

  processedAlbums = albums.map(album => processAlbumData(album, WHATSAPP_NUMBER));
}
---

<section class="music-albums py-8">
  <div class="container mx-auto px-4">
    {title && (
      <h2 class="text-4xl md:text-5xl font-bebas text-accent-gold mb-8 text-center tracking-wider">
        {title}
      </h2>
    )}

    {processedAlbums.length > 0 ? (
      <>
        <div class="albums-slider-wrapper relative">
          <button
            id="slider-prev"
            class="slider-control prev"
            aria-label="Anterior"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
            </svg>
          </button>

          <button
            id="slider-next"
            class="slider-control next"
            aria-label="Siguiente"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
            </svg>
          </button>

          <div class="albums-slider overflow-hidden">
            <div class="albums-track flex transition-transform duration-500 ease-out gap-6">
              {processedAlbums.map((album) => (
                <AlbumCard album={album} showDescription={showDescription} />
              ))}
            </div>
          </div>

          <div class="slider-dots flex justify-center gap-2 mt-8"></div>
        </div>

        <div class="text-center mt-12">
          <a
            href="/tienda?categoria=musica"
            class="inline-flex items-center gap-2 bg-accent-gold hover:bg-white text-black font-bold py-4 px-8 rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-accent-gold/50 hover:scale-105 active:scale-95 text-lg uppercase tracking-wider"
          >
            <span>Ver todos los discos en la tienda</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </>
    ) : (
      <div class="text-center py-12">
        <p class="text-xl text-gray-400">No hay discos disponibles en este momento.</p>
      </div>
    )}
  </div>
</section>

<script>
  import { initAlbumSlider } from "@/lib/slider";

  initAlbumSlider();

  document.addEventListener('astro:after-swap', () => {
    initAlbumSlider();
  });
</script>

<style>
  .albums-slider-wrapper {
    position: relative;
    padding: 0 60px;
  }

  @media (max-width: 768px) {
    .albums-slider-wrapper {
      padding: 0 40px;
    }
  }

  .slider-control {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background: rgba(212, 175, 55, 0.9);
    color: black;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
  }

  .slider-control:hover:not(:disabled) {
    background: white;
    border-color: rgb(212, 175, 55);
    transform: translateY(-50%) scale(1.1);
  }

  .slider-control:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .slider-control.prev {
    left: 0;
  }

  .slider-control.next {
    right: 0;
  }

  @media (max-width: 768px) {
    .slider-control {
      width: 36px;
      height: 36px;
    }

    .slider-control svg {
      width: 20px;
      height: 20px;
    }
  }

  .albums-slider {
    overflow: hidden;
    padding: 20px 0;
  }

  .albums-track {
    display: flex;
    transition: transform 0.5s ease-out;
  }

  .slider-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 32px;
  }

  :global(.slider-dot) {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    border: 2px solid transparent;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  :global(.slider-dot:hover) {
    background: rgba(212, 175, 55, 0.5);
  }

  :global(.slider-dot.active) {
    background: rgb(212, 175, 55);
    border-color: white;
    transform: scale(1.2);
  }
</style>
