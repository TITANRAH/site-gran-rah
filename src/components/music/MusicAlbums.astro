---
import { Picture } from "astro:assets";
import { ProductsMusicSchema, type ProductMusic } from "@/types";
import { stripHtml } from "@/helpers";

interface Props {
  title?: string;
  showDescription?: boolean;
}

const { title = "Discografía", showDescription = false } = Astro.props;

const categoryUrl = `${import.meta.env.API_URL}/product_categories?slug=musica`;
const categoryResponse = await fetch(categoryUrl);
const categoryJson = await categoryResponse.json();

let albums: ProductMusic[] = [];

if (categoryJson.length > 0) {
  const categoryId = categoryJson[0].id;
  const albumsUrl = `${import.meta.env.API_URL}/products?product_categories=${categoryId}&per_page=4`;
  const albumsResponse = await fetch(albumsUrl);
  const albumsJson = await albumsResponse.json();
  albums = ProductsMusicSchema.parse(albumsJson);
}
---

<section class="music-albums py-8">
  <div class="container mx-auto px-4">
    {title && (
      <h2 class="text-4xl md:text-5xl font-bebas text-accent-gold mb-8 text-center tracking-wider">
        {title}
      </h2>
    )}

    {albums.length > 0 ? (
      <>
        <div class="albums-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {albums.map((album, index) => {
          const albumTitle = album.title.rendered;
          let isForSale = false;
          let price: number = 0;
          let description = "";
          let spotifyUrl = "";
          let youtubeUrl = "";
          let albumImage = "";

          if (album.acf && !Array.isArray(album.acf)) {
            isForSale = album.acf.sale || false;
            price = typeof album.acf.price === 'number' ? album.acf.price : (typeof album.acf.price === 'string' ? parseFloat(album.acf.price) : 0);
            description = album.acf.description || "";
            spotifyUrl = album.acf.url_spotify || "";
            youtubeUrl = album.acf.url_youtube || "";

            if (album.acf.product_image && typeof album.acf.product_image === 'object' && 'large' in album.acf.product_image) {
              albumImage = album.acf.product_image.large.url;
            }
          }

          if (!albumImage && album.featured_images && typeof album.featured_images === 'object' && 'large' in album.featured_images) {
            albumImage = album.featured_images.large.url;
          }

          const formattedPrice = new Intl.NumberFormat('es-CL', {
            style: 'currency',
            currency: 'CLP'
          }).format(price);

          const whatsappMessage = encodeURIComponent(
            `Hola! Me interesa el disco "${albumTitle}" por ${formattedPrice}. ¿Está disponible?`
          );
          const whatsappUrl = `https://wa.me/56912345678?text=${whatsappMessage}`;

          return (
            <article
              class="album-card group"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <a href={`/producto/${album.slug}`} class="block">
                <div class="album-cover relative overflow-hidden rounded-lg shadow-xl group-hover:shadow-2xl transition-all duration-500">
                {albumImage ? (
                  <div class="relative aspect-square">
                    <Picture
                      src={albumImage}
                      alt={albumTitle}
                      width={400}
                      height={400}
                      formats={["avif", "webp"]}
                      class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700 ease-out"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

                    {isForSale && (
                      <div class="absolute top-3 right-3 bg-accent-gold text-black px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide shadow-lg">
                        En Venta
                      </div>
                    )}

                    <div class="absolute inset-0 flex items-center justify-center gap-3 opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-y-4 group-hover:translate-y-0">
                      <span
                        class="bg-accent-gold hover:bg-white text-black p-4 rounded-full shadow-2xl transform hover:scale-110 transition-all duration-300 cursor-pointer flex items-center justify-center"
                        aria-label="Ver detalles del disco"
                      >
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                      </span>

                      {spotifyUrl && (
                        <a
                          href={spotifyUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="bg-[#1DB954] hover:bg-[#1ed760] text-white p-4 rounded-full shadow-2xl transform hover:scale-110 transition-all duration-300"
                          aria-label="Escuchar en Spotify"
                          onclick="event.stopPropagation();"
                        >
                          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                          </svg>
                        </a>
                      )}
                      {youtubeUrl && (
                        <a
                          href={youtubeUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="bg-[#FF0000] hover:bg-[#cc0000] text-white p-4 rounded-full shadow-2xl transform hover:scale-110 transition-all duration-300"
                          aria-label="Ver en YouTube"
                          onclick="event.stopPropagation();"
                        >
                          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                          </svg>
                        </a>
                      )}
                    </div>
                  </div>
                ) : (
                  <div class="aspect-square bg-gray-800 flex items-center justify-center">
                    <svg class="w-20 h-20 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
                    </svg>
                  </div>
                )}
              </div>

              <div class="album-info mt-4">
                <h3 class="text-xl md:text-2xl font-bebas text-white mb-2 tracking-wide group-hover:text-accent-gold transition-colors duration-300">
                  {albumTitle}
                </h3>

                {showDescription && description && (
                  <p class="text-sm text-gray-400 mb-3 line-clamp-2">
                    {stripHtml(description)}
                  </p>
                )}

                {isForSale && price > 0 && (
                  <div class="mt-3 space-y-2">
                    <p class="text-2xl font-bold text-accent-gold">
                      {formattedPrice}
                    </p>
                  </div>
                )}

                <div class="mt-3 flex gap-2 md:hidden">
                  {spotifyUrl && (
                    <a
                      href={spotifyUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 bg-[#1DB954] hover:bg-[#1ed760] text-white py-2 px-3 rounded-lg text-sm font-semibold text-center transition-colors duration-200 flex items-center justify-center gap-2"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                      </svg>
                      Spotify
                    </a>
                  )}
                  {youtubeUrl && (
                    <a
                      href={youtubeUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 bg-[#FF0000] hover:bg-[#cc0000] text-white py-2 px-3 rounded-lg text-sm font-semibold text-center transition-colors duration-200 flex items-center justify-center gap-2"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                      </svg>
                      YouTube
                    </a>
                  )}
                </div>
              </div>
              </a>

              {/* Botón WhatsApp - Fuera del enlace para evitar conflictos */}
              {isForSale && price > 0 && (
                <a
                  href={whatsappUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="mt-2 w-full flex items-center justify-center gap-2 bg-[#25D366] hover:bg-[#128C7E] text-white font-bold py-3 px-4 rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-[#25D366]/50 hover:scale-105 active:scale-95"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                  </svg>
                  <span>Consultar Disponibilidad</span>
                </a>
              )}
            </article>
          );
        })}
        </div>

        {/* Botón Ver más en la tienda */}
        <div class="text-center mt-12">
          <a
            href="/tienda?categoria=musica"
            class="inline-flex items-center gap-2 bg-accent-gold hover:bg-white text-black font-bold py-4 px-8 rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-accent-gold/50 hover:scale-105 active:scale-95 text-lg uppercase tracking-wider"
          >
            <span>Ver todos los discos en la tienda</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </>
    ) : (
      <div class="text-center py-12">
        <p class="text-xl text-gray-400">No hay discos disponibles en este momento.</p>
      </div>
    )}
  </div>
</section>

<style>
  .album-card {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Efecto de brillo en hover */
  .album-cover::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.7s ease;
    z-index: 1;
  }

  .album-card:hover .album-cover::before {
    left: 100%;
  }
</style>
