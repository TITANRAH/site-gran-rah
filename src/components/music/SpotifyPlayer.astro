---
interface Props {
  url: string;
}

const { url } = Astro.props;
---

<div class="music-card group relative bg-gray-800/80 rounded-3xl p-8 lg:p-6 backdrop-blur-lg border border-white/10 transition-all duration-500 ease-out overflow-hidden hover:-translate-y-2 hover:scale-[1.02] hover:border-accent-gold hover:shadow-[0_20px_60px_rgba(212,175,55,0.3)]">
  <div class="card-glow absolute -top-1/2 -left-1/2 w-[200%] h-[200%] opacity-0 transition-opacity duration-400 pointer-events-none group-hover:opacity-100 group-hover:animate-rotate" style="background: radial-gradient(circle, rgba(29, 185, 84, 0.15) 0%, transparent 70%);"></div>

  <div class="relative z-10">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-10 h-10 rounded-full bg-[#1DB954] flex items-center justify-center animate-bounce-slow">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-white">Spotify</h3>
    </div>

    <div class="relative rounded-xl overflow-hidden shadow-[0_10px_30px_rgba(0,0,0,0.5)] transition-all duration-300 group-hover:scale-[1.02] group-hover:shadow-[0_15px_40px_rgba(0,0,0,0.7)]">
      <iframe
        data-testid="embed-iframe"
        style="border-radius:12px"
        src={url}
        width="100%"
        height="352"
        frameborder="0"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"
        title="Spotify Player"
      ></iframe>
    </div>
  </div>
</div>

<style>
  @keyframes bounceSlow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce-slow {
    animation: bounceSlow 2s ease-in-out infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-rotate {
    animation: rotate 8s linear infinite;
  }
</style>
