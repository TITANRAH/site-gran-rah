---
import { decodeHtmlEntities } from "@/helpers";
import type { Event } from "@/types";

interface Props {
  event: Event;
  isEven: boolean;
}

const { event, isEven } = Astro.props;

const acf = event.acf && !Array.isArray(event.acf) ? event.acf : null;
const address = acf?.address ?? null;
const schedule = acf?.schedule ?? null;
---

<div class={`w-full md:w-5/12 ${isEven ? "md:text-left" : "md:text-right"}`}>
  <a
    href={`/evento/${event.slug}`}
    class="block bg-secondary-bg rounded-2xl p-6 md:p-8 shadow-lg border-2 border-accent-gold/30 hover:border-accent-gold hover:scale-[1.02] transition-all duration-300 group"
  >
    <h3
      class="text-2xl md:text-3xl font-black text-white mb-3 group-hover:text-accent-gold transition-colors"
    >
      {decodeHtmlEntities(event.title.rendered)}
    </h3>

    {
      address && (
        <div
          class="flex items-center gap-2 text-gray-300 mb-2"
          class:list={[isEven ? "md:justify-start" : "md:justify-end"]}
        >
          <svg
            class="w-5 h-5 text-accent-gold"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          <span class="font-bold text-sm">{address}</span>
        </div>
      )
    }

    {
      schedule && (
        <p
          class="text-gray-400 text-sm mb-2"
          class:list={[isEven ? "md:text-left" : "md:text-right"]}
        >
          {schedule}
        </p>
      )
    }

    <div
      class:list={[
        "mt-4 flex items-center gap-2 text-accent-gold font-bold text-sm uppercase",
        isEven ? "md:justify-start" : "md:justify-end",
      ]}
    >
      <span>Ver detalles</span>
      <svg
        class="w-4 h-4 group-hover:translate-x-1 transition-transform"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </a>
</div>
