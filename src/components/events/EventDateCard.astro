---
interface Props {
  day: string;
  month: string;
  weekday: string;
  isEven: boolean;
}

const { day, month, weekday, isEven } = Astro.props;
---

<div
  class={`w-full md:w-5/12 flex ${isEven ? "md:justify-end" : "md:justify-start"}`}
>
  <div class="relative group">
    <div
      class="bg-secondary-bg border-2 border-accent-gold rounded-2xl p-6 text-center shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-300"
    >
      <div
        class="text-gray-400 text-xs font-bold uppercase tracking-widest mb-2"
      >
        {weekday}
      </div>
      <div
        class="text-5xl md:text-6xl font-black text-accent-gold leading-none mb-1"
      >
        {day}
      </div>
      <div class="text-xl font-bold text-white uppercase tracking-wide">
        {month}
      </div>
    </div>
  </div>
</div>
