---
import ProductCard from "./ProductCard.astro";
import { ProductsMusicSchema, type ProductMusic } from "@/types";

interface Props {
  categorySlug?: string;
  title?: string;
}

const { categorySlug = "musica", title = "Discos Disponibles" } = Astro.props;

const categoryUrl = `${import.meta.env.API_URL}/product_categories?slug=${categorySlug}`;
const categoryResponse = await fetch(categoryUrl);
const categoryJson = await categoryResponse.json();

let products: ProductMusic[] = [];

if (categoryJson.length > 0) {
  const categoryId = categoryJson[0].id;

  const productsUrl = `${import.meta.env.API_URL}/products?categoria-producto=${categoryId}&_embed`;
  const productsResponse = await fetch(productsUrl);
  const productsJson = await productsResponse.json();

  const allProducts = ProductsMusicSchema.parse(productsJson);

  products = allProducts.filter((product) => {
    if (!product.acf || Array.isArray(product.acf)) {
      return false;
    }
    return product.acf.sale === true;
  });
}
---

<section class="products-section py-12">
  <div class="container mx-auto px-4">
    {
      title && (
        <h2 class="text-4xl md:text-5xl font-bebas text-accent-gold mb-8 text-center">
          {title}
        </h2>
      )
    }

    {
      products.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {products.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-xl text-gray-400">
            No hay productos disponibles en esta categor√≠a.
          </p>
        </div>
      )
    }
  </div>
</section>
