---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!-- Título con animación -->
<div class="text-center mb-12 animate-fade-in">
  <h2
    class="text-4xl md:text-6xl font-black uppercase text-transparent bg-clip-text bg-gradient-to-r from-accent-gold via-yellow-400 to-accent-gold animate-gradient mb-4"
  >
    {title}
  </h2>
  <div
    class="h-1 w-32 mx-auto bg-gradient-to-r from-transparent via-accent-gold to-transparent animate-pulse"
  >
  </div>
</div>
