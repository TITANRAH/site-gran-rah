---
import { Picture } from "astro:assets";
import type { Moment } from "@/types";
import Title from "./Title.astro";

interface Props {
  moments: Moment[];
  title?: string;
}

const { moments, title = "Momentos Especiales" } = Astro.props;
---

<section class="py-16 bg-primary-bg">
  <div class="container mx-auto px-4">
    <Title title={title} />

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        moments.map((moment) => (
          <article class="bg-secondary-bg rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
            <div class="aspect-video overflow-hidden">
              <Picture
                src={moment.image}
                alt={moment.title}
                width={800}
                height={450}
                formats={["avif", "webp"]}
                class="w-full h-full object-cover object-[center_30%] hover:scale-110 transition-transform duration-300"
              />
            </div>

            <div class="p-6">
              <h3 class="text-2xl font-bold mb-3 text-white">{moment.title}</h3>
              <p class="text-gray-300 leading-relaxed">{moment.description}</p>
            </div>
          </article>
        ))
      }
    </div>

    {
      moments.length === 0 && (
        <p class="text-center text-gray-400 text-lg">
          No hay momentos disponibles en este momento.
        </p>
      )
    }
  </div>
</section>
